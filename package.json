{
  "name": "flocc",
  "version": "0.4.4",
  "description": "Agent-based modeling in JavaScript in the browser or server.",
  "main": "dist/flocc.js",
  "module": "dist/flocc.es.js",
  "typings": "dist/main.d.ts",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "dev": "concurrently 'npm run watch' 'node client/app.js' 'browser-sync start --watch dist/flocc.js'",
    "test": "jest",
    "perf": "node ./performance/agent.js"
  },
  "author": "Scott Donaldson <sd@scottland.cc> (https://scottland.cc)",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "2.26.7",
    "concurrently": "5.1.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "jest": "25.1.0",
    "jest-canvas-mock": "^2.2.0",
    "minimist": "^1.2.5",
    "pixelmatch": "^5.1.0",
    "puppeteer": "^2.1.1",
    "rollup": "2.1.0",
    "rollup-plugin-typescript2": "0.26.0",
    "typescript": "3.8.3",
    "yargs": "^15.3.1"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "abm",
    "agent-based modeling",
    "agent-based simulation",
    "multiagent",
    "cellular automata",
    "simulation"
  ],
  "jest": {
    "setupFiles": [
      "./__setups__/canvas.js"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
